<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
	<name>Hello World</name>
	<author>Aladar Barthi</author>
	<creationDate>August 2018</creationDate>
	<copyright>Copyright (C) 2018 - 2020 Updatr.io. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@updatr.io</authorEmail>
	<authorUrl>updatr.io</authorUrl>
	<version>1.0.0</version>
	<description>Hello World plugin for Joomla.</description>
	<files>
		<filename plugin="helloworld">helloworld.php</filename>
        <folder plugin="helloworld">fields</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/content/helloworld/fields">
                <field
                    name="download_key"
                    type="updatr_downloadkey"
                    label="Download Key"
                    description="Download key field description"
                    default=""
                    server="Hello World Joomla Plugin Updates"
                    filter="string"
                />
			</fieldset>
		</fields>
	</config>
    <updateservers>
        <server type="extension" name="Hello World Joomla Plugin Updates">http://sandbox.updatr.vagrant/api/v1/update-channels/hello-world-joomla-plugin-updates.xml</server>
    </updateservers>
</extension>
